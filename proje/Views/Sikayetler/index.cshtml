@model List<Sikayet>
@{
    ViewData["Title"] = "Şikayetler";
}

<style>
    .sikayet-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    .sikayet-kutusu {
        border: 1px solid #dc3545;
        border-radius: 8px;
        padding: 15px;
        background-color: #fff0f0;
        box-shadow: 2px 2px 6px rgba(0,0,0,0.1);
    }

    .sikayet-baslik {
        font-weight: bold;
        color: #b02a37;
        margin-bottom: 5px;
    }

    .sikayet-icerik {
        color: black;
    }

    form div {
        margin-bottom: 10px;
    }

    form input, form textarea {
        width: 100%;
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    form button {
        padding: 10px 20px;
        border: none;
        background-color: #dc3545;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    form button:hover {
        background-color: #b02a37;
    }

    .sikayet-islemler {
        margin-top: 10px;
    }

    .sikayet-islemler form,
    .sikayet-islemler a {
        display: inline-block;
        margin-right: 10px;
    }

    .guncelle-link {
        background-color: #28a745;
        padding: 8px 12px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .guncelle-link:hover {
        background-color: #1e7e34;
    }

    .sil-butonu {
        background-color: #dc3545;
        color: white;
        border-radius: 5px;
        padding: 8px 12px;
        border: none;
        cursor: pointer;
    }

    .sil-butonu:hover {
        background-color: #b02a37;
    }

    #tes {
        color: black;
    }
</style>

<h2>Şikayetler</h2>

<!-- Şikayet Ekleme Formu -->
<form asp-action="Ekle" method="post">
    <div>
        <label>Ad:</label>
        <input type="text" name="Ad" required />
    </div>
    <div>
        <label>Soyad:</label>
        <input type="text" name="Soyad" required />
    </div>
    <div>
        <label>Şikayet:</label>
        <textarea name="Icerik" rows="4" required></textarea>
    </div>
    <button type="submit">Şikayet Ekle</button>
</form>

<hr />

@foreach (var sikayet in Model)
{
    <div class="sikayet-kutusu">
        @if (ViewBag.GuncelleId != null && ViewBag.GuncelleId == sikayet.Id)
        {
            <!-- Güncelleme Formu -->
            <form asp-action="Guncelle" method="post">
                <input type="hidden" name="Id" value="@sikayet.Id" />
                <div>
                    <label>Ad:</label>
                    <input type="text" name="Ad" value="@sikayet.Ad" required />
                </div>
                <div>
                    <label>Soyad:</label>
                    <input type="text" name="Soyad" value="@sikayet.Soyad" required />
                </div>
                <div>
                    <label>Şikayet:</label>
                    <textarea name="Icerik" rows="4" required>@sikayet.Icerik</textarea>
                </div>
                <button type="submit">Kaydet</button>
                <a href="@Url.Action("Index")" style="margin-left:10px;">İptal</a>
            </form>
        }
        else
        {
            <!-- Normal Görünüm -->
            <div class="sikayet-baslik">@sikayet.Ad @sikayet.Soyad:</div>
            <div class="sikayet-icerik">@sikayet.Icerik</div>

            <div class="sikayet-islemler">
                <!-- Güncelleme linki (aynı sayfada kalacak) -->
                <a class="guncelle-link" href="@Url.Action("Index", new { guncelleId = sikayet.Id })">Güncelle</a>

                <!-- Silme formu -->
                <form asp-action="Sil" method="post">
                    <input type="hidden" name="id" value="@sikayet.Id" />
                    <button type="submit" class="sil-butonu">Sil</button>
                </form>
            </div>
        }
    </div>
}
